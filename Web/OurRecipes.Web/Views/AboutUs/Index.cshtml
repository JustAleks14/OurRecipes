@model OurRecipes.Web.ViewModels.Recipes.RecipesListViewModel
@{
    this.ViewData["Title"] = "About Us";
}
<body>
    <!-- ##### Breadcumb Area Start ##### -->
    <div class="breadcumb-area bg-img bg-overlay" style="background-image: url(img/bg-img/breadcumb4.jpg);">
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-12">
                    <div class="breadcumb-text text-center">
                        <h2>About Us</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ##### Breadcumb Area End ##### -->
    <!-- ##### Contact Information Area Start ##### -->
    <div class="contact-information-area section-padding-80">
        <div class="container">
            <div class="row">
                <!-- Contact Text -->
                <div class="col-12 col-lg-5">
                    <div class="contact-text">
                        <p>We are a team of two highschoolers with high ambitions. That is our first website and there are more to come.</p>
                        <p>Do not hesitate to give us feedback so we can improve our site.</p>
                    </div>
                    <!-- Single Cool Fact -->
                    <div class="row align-items-center mt-70">
                        <div class=""  style="visibility:hidden">
                            <div class="single-cool-fact">
                                <img src="img/core-img/hamburger.png" alt="">
                                <h3><span class="counter">14</span></h3>
                                <h6>Amazing Recipes</h6>
                            </div>
                        </div>
                        <div class="">
                            <div class="single-cool-fact">
                                <img src="img/core-img/hamburger.png" alt="">
                                <h3><span class="counter">@Model.RecipesCount</span></h3>
                                <h6>Amazing Recipes</h6>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-12 col-lg-3">
                    <!-- Single Contact Information -->
                    <div class="single-contact-information mb-30">
                        <h6>Address:</h6>
                        <p>2 Nikola Filipov Street<br>4701 Raykovo, Smolyan</p>
                    </div>
                    <!-- Single Contact Information -->
                    <div class="single-contact-information mb-30">
                        <h6>Phone:</h6>
                        <p>+359 877 760 226 <br>+359 882 727 497</p>
                    </div>
                    <!-- Single Contact Information -->
                    <div class="single-contact-information mb-30">
                        <h6>Email:</h6>
                        <p>aleks6_6@abv.bg</p>
                        <p>andreev_h@abv.bg</p>
                    </div>
                </div>

                <!-- Newsletter Area -->
                <div class="col-12 col-lg-4">
                    <div class="newsletter-form bg-img bg-overlay" style="background-image: url(img/bg-img/bg1.jpg);">
                        <form action="#" method="post">
                            <input type="email" name="email" placeholder="Subscribe To Newsletter">
                            <button type="submit" class="btn delicious-btn w-100">Subscribe</button>
                        </form>
                        <p>You will be informed about our best and new recipes weekly!</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ##### Contact Information Area End ##### -->
</body>